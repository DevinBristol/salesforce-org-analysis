# Autonomous Salesforce Development System - Environment Variables

# Anthropic API Configuration (Standard)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
# Legacy: Kept for backward compatibility
CLAUDE_API_KEY=your_claude_api_key_here

# OpenAI API Configuration (optional, for fallback)
OPENAI_API_KEY=your_openai_api_key_here

# Salesforce Configuration
SF_USERNAME=your_salesforce_username@example.com
SF_LOGIN_URL=https://login.salesforce.com
SF_API_VERSION=60.0

# System Configuration
PORT=3000
LOG_LEVEL=info

# Deployment Configuration
AUTO_DEPLOY_TO_SANDBOX=false
REQUIRE_TEST_COVERAGE=true
MIN_TEST_COVERAGE=75

# Slack Bot Configuration (Phase 3)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret
SLACK_APP_TOKEN=xapp-your-slack-app-token
SLACK_CHANNEL=#salesforce-dev

# Local Repository Operations (Phase 3)
WORKSPACE_ROOT=C:\Users\devin\IdeaProjects\DevAgentWorkspace
DEFAULT_REPO=salesforce-autonomous-dev-system

# Budget & Cost Management
COST_BUDGET_MONTHLY=100

# Optional: Advanced Settings
MAX_CONCURRENT_TASKS=3
CACHE_TTL_MINUTES=60
ENABLE_DEBUG_MODE=false

# ===========================================
# Phase 4: Autonomous Orchestration Platform
# ===========================================

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/salesforce_dev_system
DATABASE_SSL=false

# Claude Code Orchestrator Settings
ORCHESTRATOR_MAX_INSTANCES=5
ORCHESTRATOR_TIMEOUT=1800000
ORCHESTRATOR_IDLE_TIMEOUT=300000

# Progress Reporter Settings
PROGRESS_UPDATE_INTERVAL=30000
PROGRESS_MIN_INTERVAL=5000

# Result Callback Settings
CALLBACK_MAX_RETRIES=3
CALLBACK_RETRY_DELAY=5000
CALLBACK_CACHE_TTL=86400000

# Monitoring & Alerting
ALERT_CHANNEL=#dev-alerts
ALERT_ERROR_RATE_THRESHOLD=0.1
ALERT_RESPONSE_TIME_THRESHOLD=60000
ALERT_MEMORY_THRESHOLD=0.9
ALERT_COOLDOWN=300000

# Conversation Manager
CONVERSATION_MAX_TOKENS=100000
CONVERSATION_SUMMARY_THRESHOLD=50000
CONVERSATION_SESSION_TIMEOUT=14400000
CONVERSATION_MEMORY_ENABLED=true

# Workflow Engine
WORKFLOW_MAX_PARALLEL_STEPS=3
WORKFLOW_STEP_TIMEOUT=600000

# Worker Pool (Enhanced)
WORKER_POOL_SIZE=3
WORKER_AUTO_RESTART=true
WORKER_MAX_RESTARTS=5
WORKER_RESTART_DELAY=5000

# Feature Flags
FEATURE_AUTONOMOUS_MODE=true
FEATURE_WORKFLOW_APPROVAL=true
FEATURE_COST_TRACKING=true
FEATURE_MEMORY_PERSISTENCE=true

# ===========================================
# Multi-Agent System (ReAct + Extended Thinking)
# ===========================================

# Enable the upgraded multi-agent orchestrator
# When true: Uses ReAct loops, extended thinking, and parallel subagents
# When false: Uses legacy linear processing
USE_AGENT_SYSTEM=true

# Agent Model Configuration
# Lead agent (orchestrator) - uses extended thinking for planning
AGENT_LEAD_MODEL=claude-opus-4-20250514
# Worker agents (subagents) - parallel execution
AGENT_WORKER_MODEL=claude-sonnet-4-20250514
# Validation/quick checks
AGENT_VALIDATOR_MODEL=claude-haiku-4-20250514

# Extended Thinking Configuration
THINKING_BUDGET_TOKENS=10000
THINKING_MAX_PLANNING_TIME=120000

# Subagent Configuration
MAX_SUBAGENTS=5
SUBAGENT_TIMEOUT=300000
MAX_REACT_ITERATIONS=10

# Agent Memory
AGENT_MEMORY_ENABLED=true
AGENT_LEARN_FROM_TASKS=true
