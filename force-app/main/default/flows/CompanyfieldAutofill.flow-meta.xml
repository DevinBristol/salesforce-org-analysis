<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <description>Update Lead Household Name</description>
    <environments>Default</environments>
    <formulas>
        <name>fmlLeadHouseholdName</name>
        <dataType>String</dataType>
        <expression>{!$Record.LastName} + &quot;, &quot; + {!$Record.FirstName} + IF(NOT(ISBLANK({!$Record.SecondaryContactFirstName__c})), IF({!$Record.Secondary_Contact_Last_Name__c} = {!$Record.LastName}, 
&quot; &amp; &quot; + {!$Record.SecondaryContactFirstName__c},
&quot; &amp; &quot; + {!$Record.Secondary_Contact_Last_Name__c} + &quot;, &quot; + {!$Record.SecondaryContactFirstName__c}),
 NULL)
 + &quot; Household&quot;</expression>
    </formulas>
    <interviewLabel>CompanyfieldAutofill {!$Flow.CurrentDateTime}</interviewLabel>
    <label>trigger - on Lead - Update Household Name on name changes</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <description>Switch out the value for auto household name.</description>
        <name>Autohouseholdname</name>
        <label>Auto-household name</label>
        <locationX>176</locationX>
        <locationY>287</locationY>
        <inputAssignments>
            <field>Company</field>
            <value>
                <elementReference>fmlLeadHouseholdName</elementReference>
            </value>
        </inputAssignments>
        <inputReference>$Record</inputReference>
    </recordUpdates>
    <start>
        <locationX>50</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Autohouseholdname</targetReference>
        </connector>
        <filterLogic>1 OR (2 OR 3 OR 4 OR 5 OR 6)</filterLogic>
        <filters>
            <field>Lead_Type__c</field>
            <operator>EqualTo</operator>
            <value>
                <stringValue>Residential</stringValue>
            </value>
        </filters>
        <filters>
            <field>FirstName</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>LastName</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>SecondaryContactFirstName__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Secondary_Contact_Last_Name__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <filters>
            <field>Lead_Type__c</field>
            <operator>IsChanged</operator>
            <value>
                <booleanValue>true</booleanValue>
            </value>
        </filters>
        <object>Lead</object>
        <recordTriggerType>CreateAndUpdate</recordTriggerType>
        <triggerType>RecordBeforeSave</triggerType>
    </start>
    <status>Obsolete</status>
</Flow>
