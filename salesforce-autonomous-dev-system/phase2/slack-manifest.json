{
  "display_information": {
    "name": "Salesforce Dev Bot",
    "description": "Control your autonomous Salesforce development system",
    "background_color": "#1264a3"
  },
  "features": {
    "bot_user": {
      "display_name": "SF Dev Bot",
      "always_online": true
    },
    "slash_commands": [
      {
        "command": "/sf-dev",
        "description": "Control Salesforce development",
        "usage_hint": "status | improve-tests [count] | stop | cost"
      }
    ]
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "commands",
        "chat:write",
        "channels:read",
        "groups:read"
      ]
    }
  },
  "settings": {
    "event_subscriptions": {
      "bot_events": [
        "message.channels",
        "message.groups"
      ]
    },
    "interactivity": {
      "is_enabled": true
    },
    "org_deploy_enabled": false,
    "socket_mode_enabled": true
  }
}
